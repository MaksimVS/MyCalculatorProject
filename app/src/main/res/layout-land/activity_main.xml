<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_personalization">

    <TextView
        android:id="@+id/heading"
        style="@style/title_box_personalization" />

    <TextView
        android:id="@+id/textValue"
        style="@style/view_calculator_values"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/window_decoration"
        android:gravity="end"
        android:text="@string/_0"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/my_image2" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:columnCount="5"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn_1"
                android:text="@string/button1"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_2"
                android:text="@string/button2"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_3"
                android:text="@string/button3"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_delete"
                android:text="@string/button_delete"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_plus"
                android:text="@string/buttonPlus"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_4"
                android:text="@string/button4"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_5"
                android:text="@string/button5"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_6"
                android:text="@string/button6"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_dot"
                android:text="@string/button_dot"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_minus"
                android:text="@string/buttonMinus"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_7"
                android:text="@string/button7"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_8"
                android:text="@string/button8"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_9"
                android:text="@string/button9"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_division"
                android:text="@string/button_division"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_multiplication"
                android:text="@string/button_multiplication"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_0"
                android:text="@string/button0"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_00"
                android:text="@string/button00"
                style="@style/calculator_buttons_1" />

            <Button
                android:id="@+id/btn_nullify"
                android:text="@string/button_nullify"
                style="@style/calculator_buttons_2" />

            <Button
                android:id="@+id/btn_equally"
                style="@style/calculator_buttons_2"
                android:text="@string/buttonEqually"
                android:layout_gravity="fill_horizontal"
                android:layout_columnSpan="2" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>