<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/pink"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="5dp"
        android:text="calculator"
        android:textColor="@color/orange"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:gravity="end"
        android:text="0"
        android:textColor="@color/design_default_color_error"
        android:textSize="60sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/my_image2" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:columnCount="5"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button1"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button2"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button3"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/button_delete"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/buttonPlus"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button4"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button5"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button6"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/button_dot"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/buttonMinus"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button7"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button8"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button9"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/button_division"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/button_multiplication"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button0"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lite_gray"
                android:text="@string/button00"
                android:textColor="@color/orange"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_nullify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                android:text="@string/button_nullify"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_equally"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:backgroundTint="@color/gray"
                android:text="@string/buttonEqually"
                android:textColor="@color/design_default_color_error"
                android:textSize="20sp" />
        </GridLayout>
    </LinearLayout>
</LinearLayout>